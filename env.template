# RapidOrch Environment Configuration Template
# Copy this file to .env and fill in your values

# App Settings
RAPIDORCH_ENVIRONMENT=development
RAPIDORCH_DEBUG=true
RAPIDORCH_LOG_LEVEL=INFO

# Database Settings
RAPIDORCH_DATABASE_URL=postgresql://rapidorch:rapidorch@localhost:5432/rapidorch

# Redis Settings  
RAPIDORCH_REDIS_URL=redis://localhost:6379/0

# Chroma Vector Database Settings
RAPIDORCH_CHROMA_HOST=localhost
RAPIDORCH_CHROMA_PORT=8001

# LLM Settings (OpenAI)
RAPIDORCH_OPENAI_API_KEY=your-openai-api-key-here
RAPIDORCH_OPENAI_MODEL=gpt-4
RAPIDORCH_MAX_TOKENS=2000

# Security Settings
RAPIDORCH_SECRET_KEY=your-super-secret-key-change-in-production
RAPIDORCH_ALGORITHM=HS256
RAPIDORCH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RAPIDORCH_RATE_LIMIT_REQUESTS=100
RAPIDORCH_RATE_LIMIT_WINDOW=60

# CORS Settings (comma-separated)
RAPIDORCH_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000 